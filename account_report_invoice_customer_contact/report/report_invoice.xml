<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='row']" position="inside">
            <div class="col-6" name="customer_contact" t-if="o.customer_contact_id">
                <span t-field="o.customer_contact_id.name" id="customer-contact" />
                <t t-if="o.customer_contact_id.phone">
                    <br />
                    <i class="fa fa-fw fa-phone" />
                    <span
                        t-if="o.customer_contact_id"
                        t-field="o.customer_contact_id.phone"
                        id="customer-contact-phone"
                    />
                </t>
            </div>
        </xpath>
    </template>
</odoo>
